<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bus_info_lly"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    style="@style/BusPathItemPadding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/got_in_bus_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="8:30  上车"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/common_black"/>
        <TextView
            android:id="@+id/bus_station_tv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="新化-->田坪"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/common_black"/>

        <TextView
            android:id="@+id/bus_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:text="湘K1080"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/common_black"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/nearest_station_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上车站 关上站"
            android:textSize="@dimen/sp_12"
            android:lines="1"
            android:textColor="@color/common_black"/>
        <TextView
            android:id="@+id/walk_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="步行：980米 约20分钟"
            android:textSize="@dimen/sp_12"
            android:lines="1"
            android:textColor="@color/common_black"/>

        <TextView
            android:id="@+id/leave_home_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请8:30出门"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/sp_12"
            android:lines="1"
            android:textColor="@color/common_black"/>
    </LinearLayout>

</LinearLayout>